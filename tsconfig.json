{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "dist",
    "jsx": "react",
    "target": "ES5",
    "lib": ["ES2015", "DOM"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  },
  "include": ["src", "global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
